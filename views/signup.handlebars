<div class="group">
  <h2 class="loginTitle">Sign Up</h2>

  <form class="form login-form" action="/login" method="POST">
    <div class="form-group user">

      <label class="email-login" for="email-login">email:</label>
      <input class="form-input" type="text" id="email-login" />

    </div>
    <div class="form-group password">

      <label class="password-login" for="password-login">password:</label>
      <input class="form-input" type="password" id="password-login" />

    </div>
    <div class="form-group">

      <a href="/"><button class="btn btn-primary" type="submit">Cancel</button></a>
      <button class="btn btn-primary" type="submit">Sign Up</button>

    </div>
  </form>
</div>